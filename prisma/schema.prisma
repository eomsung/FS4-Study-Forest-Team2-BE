datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Todo {
  id        Int      @id @default(autoincrement()) // 자동 증가하는 ID
  text      String   // 할 일 내용
  createdAt DateTime @default(now())  // 생성 시간
  updatedAt DateTime @updatedAt  // 수정 시간 자동 갱신
}
